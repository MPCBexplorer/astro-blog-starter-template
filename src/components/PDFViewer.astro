---
// Simple PDF viewer component using iframe
interface Props {
  src: string;
  width?: string;
  height?: string;
}

const { src: originalSrc, width = "150%", height = "100vh" } = Astro.props;
const src = `${originalSrc}#zoom=130`;
---

<div style="width: 100%;">
  <iframe
    src={src}
    width={width}
    height={height}
    style=" min-width: 100%;height: 100vh;position:relative; left: -25%;"
    loading="lazy"
    allow="autoplay"
    title="PDF Viewer"
  >
  </iframe>
</div>
