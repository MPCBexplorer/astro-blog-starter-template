---
// Simple PDF viewer component using iframe
interface Props {
  src: string;
  width?: string;
  height?: string;
}

const { src, width = '100%', height = '100vh' } = Astro.props;
---
<iframe 
  src={src}
  width={width}
  height={height}
  style="border: none; width: 100%; height: 100vh; display: block; margin: 0; padding: 0;"
  loading="lazy"
  allow="autoplay"
  title="PDF Viewer"
>
</iframe>
